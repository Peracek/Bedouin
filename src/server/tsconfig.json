{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",        
    "allowJs": true,                       /* Allow javascript files to be compiled. */
    "checkJs": false,           
    "outDir": "../../build/server",             
    "strict": true,                 
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@model/*": [
          "model/*"
      ],
      "@common/*": [
          "common/*"
      ],
      "@types": [ "common/types" ],
      "@shared/*": [ "../shared/*" ],
      "@utils/*": [ "common/utils/*" ]
    }
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    'node_modules',
    '../node_modules/'
  ]
}