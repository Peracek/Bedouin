{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",                  
    "outDir": "../../build/server",             
    "strict": true,                 
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@model/*": [
          "model/*"
      ],
      "@common/*": [
          "common/*"
      ],
      "@types": [ "common/types" ],
      "@utils/*": [ "common/utils/*" ],
      "*": [
          "types/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ]
}